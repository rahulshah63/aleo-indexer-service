{
  "name": "aleo-indexer",
  "version": "0.1.0",
  "description": "A robust and extensible Aleo blockchain indexer CLI and framework inspired by Ponder.sh.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aleo-indexer": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && bun run tsc && sed -i.bak '1s|^|#!/usr/bin/env bun\\n|' dist/cli/index.js && rm dist/cli/index.js.bak",
    "dev": "bun --inspect-brk run dist/cli/index.js dev",
    "start": "bun run dist/cli/index.js start"
  },
  "keywords": [
    "aleo",
    "indexer",
    "blockchain",
    "drizzle",
    "graphql",
    "hono",
    "cli"
  ],
  "author": "Rahul Shah",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "commander": "14.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "0.44.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.24.2",
    "graphql-type-json": "^0.3.2",
    "graphql-yoga": "^5.0.0",
    "hono": "^4.1.2",
    "json-bigint-patch": "^0.0.8",
    "p-limit": "6.2.0",
    "pg": "^8.11.5",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/async-retry": "^1.3.9",
    "@types/commander": "2.12.0",
    "@types/node": "24.0.0",
    "@types/pg": "^8.11.5",
    "@types/pino": "7.0.4",
    "drizzle-kit": "0.31.1",
    "typescript": "^5.4.5"
  }
}