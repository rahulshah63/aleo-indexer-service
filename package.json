{
  "name": "aleo-indexer",
  "version": "1.0.0",
  "description": "Indexer for Aleo.",
  "type": "module",
  "bin": {
    "aleo-indexer": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts dev",
    "db:migrate": "drizzle-kit migrate",
    "build": "tsc",
    "text": "vitest",
    "test:typecheck": "vitest --typecheck.only",
    "start": "node dist/index.js start",
    "db:generate": "drizzle-kit generate",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "aleo",
    "indexer",
    "drizzle",
    "hono",
    "vite"
  ],
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@hono/node-server": "^1.14.4",
    "async-retry": "^1.3.3",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.4.0",
    "hono": "^4.4.7",
    "http-terminator": "^3.2.0",
    "p-limit": "^6.2.0",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "tsx": "^4.19.4",
    "vite": "^6.3.5",
    "vite-node": "^3.2.2"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.8",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.4.5",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "engines": {
    "node": ">=18.14"
  }
}
